{
  "compilerOptions": {
    "target": "ES6",                   // Output modern JavaScript
    "module": "ES6",                   // Use ES6 modules
    "rootDir": "./tsSrc",              // Your source TypeScript files
    "outDir": "./js",                  // Compiled JavaScript output
    "strict": true,                    // Enable all strict type checks
    "esModuleInterop": true,          // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["tsSrc/**/*.ts"],        // Only compile files in tsSrc
  "exclude": ["node_modules", "js"]    // Ignore output and dependencies
}
